{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "maxNodeModuleJsDepth": 5,
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
